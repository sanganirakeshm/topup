                <div class="planPriceTxt">
                    <div class="planPriceCenterTxt">
                        <span>No plan purchased</span>
                    </div>
                </div>

                <p class="viewPlansBtn">
                    {% if summaryData.IsIPTVAvailabledInCart == 1  or isDisablePlan == 1 or summaryData.IsBundleAvailabledInCart == 1 or summaryData.IsBundleAvailabledInPurchased == 1 or summaryData.isServiceLocationChanged == 1 or summaryData.isSiteChanged == 1 %}
