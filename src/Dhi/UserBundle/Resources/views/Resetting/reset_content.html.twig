{% trans_default_domain 'FOSUserBundle' %}

{% set brand = app.session.get('brand') %}
    {% set brandName = '' %}
    {% set brandDomain = '' %}
    {% if brand %}
        {% set brandName = brand.name %}
        {% set brandDomain = brand.domain %}
        {% set banner = brand.banner %}
    {% endif %}

<section class="signup">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-12 col-sm-10 col-md-4">
                        <h2>Reset Password</h2>
           
                <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset" id="fos_user_resetting_reset" novalidate>
                    <div class="form-group full-width error_password">
                        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control','placeholder': 'New Password'}}) }}
                        <div class="serverError">{{ form_errors(form.plainPassword.first) }}</div>
                    </div>
                   <div class="form-group full-width">
                        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control','placeholder': 'Confirm Password'}}) }}
                        <div class="serverError">{{ form_errors(form.plainPassword.second) }}</div>
                    </div>
                    {{ form_rest(form) }}
                   <div class="form-group full-width clearfix">
                        <input class="btn btn-success full-width-in" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
                    </div> 
                </form>
                      </form>	  
                             </div>
                    <div class="col-xs-12 col-sm-2 col-md-8"></div>				 
 
                    </div>				
                                   </div>			
            	
        </section>	