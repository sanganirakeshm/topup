{% extends "DhiUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block body %}
    {% set brand = app.session.get('brand') %}
    {% set brandName = '' %}
    {% set brandDomain = '' %}
    {% set bgStyle = ''%}
    {% if brand %}
        {% set brandName = brand.name %}
        {% set brandDomain = brand.domain %}
        {% set banner = brand.banner %}
        {% set bgStyle = 'background-image: url("' ~ asset('uploads/whitelabel/brandingbanner/'~banner) ~ '");background-repeat: no-repeat;
    background-position: right bottom;' %}
    {% endif %}
    <style>
         body.body_bg{ background: none !important;}
    </style>
    {% block fos_user_content %}

        {% trans_default_domain 'FOSUserBundle' %}
		
		<section class="signup signin signin3rdParty" style="{{ bgStyle }}">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-offset-1 col-md-offset-1 col-sm-offset-0 col-xs-offset-0 signinForm ">
                        <h2>Sign In</h2>
                            
                            <form action="{{ path("fos_user_security_check") }}" id="login_form" method="post" novalidate>    

                                {% if error %}
                                    <div class="alert alert-danger">
                                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                                        <p>
                                            {{ error.messageKey|trans(error.messageData, 'security') }}
                                        </p>
                                    </div>           
                                {% endif %}

                                   <div class="form-group full-width">
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Username" class="form-control"/>

                                  </div>

                                    <div class="form-group full-width">
                                        <input type="password" id="password" name="_password" required="required" placeholder="Password" class="form-control"/>

                                    </div>
                                        
                                    <div class="full-width">
                                        
                                        <div class="checkbox">
                                        <label>
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> <label for="remember_me">Remember me on this computer</label>
                                        </label>
                                        <div class="serverError"></div>
                                        </div>
                                        
                                    </div>
                                        
                                    <div class="form-group full-width">
                                        <input class="btn btn-success full-width-in" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="submitBtn"/>	
                                    </div>    
                                        

                                    <div class="form-group full-width forgotPassLink">
                                        <a href="{{ path('fos_user_resetting_request') }}">Forgot password?</a> <a href="{{ path('fos_user_registration_register') }}">Create an account</a>
                                    </div>


                               


                                {#{ form_rest(form) }#}
                            </form>	  
                             </div>
                             {# <div class="col-xs-12 col-sm-12 col-md-7 signinFormBanner">{% if banner %} <img src="{{ asset('uploads/whitelabel/brandingbanner/'~banner) }}" width="" height=""> {% endif %}</div> #}
                    </div>				
                   				 
                </div>			
            	
        </section>	

    {% endblock fos_user_content %}
    
