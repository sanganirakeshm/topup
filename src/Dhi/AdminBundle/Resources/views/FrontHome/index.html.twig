{% extends "DhiAdminBundle::layout.html.twig" %}

{% block body %}

        {% include "DhiUserBundle::flashMessage.html.twig" %}
	<div class="delBoxCont"></div>		
        
         <section class="content-header">
              <h1>Home Page Content</h1>
            </section>
            <section class="content">	
		
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box box-success">
                            <form method="get">
								<div class="box-body">
									<div class="form-group col-md-4">
									    <div class="row"><div class="col-sm-12" id="country"></div></div>
                                    </div>
								</div>
                            </form>
                        </div>
                    </div>
                </div>		
                 
                <div class="box box-success">
                    <div class="box-body">
			<div class="row">
         		    <div class="col-xs-12">  
                      
                               <div class="addNewBtnsGrp">
                                <a href="{{ path('dhi_admin_front_home_new') }}" class="btn btn-success pull-right margin-top5">Add Home Content</a>
                               </div>
							<table id="emailCampaignTable" cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
										<th>Country</th>
                                        <th>Column1 Heading</th>
                                        <th>Column2 Heading</th>
                                        <th>Column3 Heading</th>
                                        <th>Column4 Heading</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                            </table>
			   
                            </div>
                        </div>
                    </div>
                 </div>        
            </section>	                
{% endblock body %}
{% block javascripts %}

    {{ parent() }}

   <script type="text/javascript">

        $(document).ready(function () {

            deleteAjaxSource = '{{ path('dhi_admin_front_home_delete') }}';

            dTable = $('#emailCampaignTable').dataTable({

                "oLanguage": {
                    "sLengthMenu": "Display _MENU_ Records",
                    "sZeroRecords": "<center>No Record Found!</center>",
                    "sInfo": "Showing _START_ to _END_ of _TOTAL_ Records",
                    "sInfoEmpty": "Showing 0 to 0 of 0 records",
                    "sInfoFiltered": "(filtered from _MAX_ total records)"
                },
                responsive: true,
                bJQueryUI: false,
                bProcessing: true,
                bServerSide: true,
                bFilter: true,
                //multipleSelection: true,
                iDisplayLength: {{ record_per_page }},
                sAjaxSource: "{{ path('dhi_admin_front_home_list_json') }}",
                "fnServerData": function ( sUrl, aoData, fnCallback, oSettings ) {
                    oSettings.jqXHR = $.ajax( {
                        "url":  sUrl,
                        "data": aoData,
                        "success": function (json) {
                            if ( json.sError ) {
                                    oSettings.oApi._fnLog( oSettings, 0, json.sError );
                            }
                            $(oSettings.oInstance).trigger('xhr', [oSettings, json]);
                            fnCallback( json );
                        },
                        "dataType": "json",
                        "cache": false,
                        "type": oSettings.sServerMethod,
                        "error": function (xhr, error, thrown) {
                            if ( error == "parsererror" ) {
                                        window.location = "{{ path('dhi_admin_user_list') }}";
                                }
                        }
                    } );
		},
                aoColumns: [
					{"sName": "Country","bSearchable": true,"bSortable": true},
                    {"sName": "Column1","bSearchable": false,"bSortable": true},
                    {"sName": "Column2", "bSearchable": false, "bSortable": true},
                    {"sName": "Column3", "bSearchable": false, "bSortable": true},
                    {"sName": "Column4", "bSearchable": false, "bSortable": true},
                    {"sName": "Action", "bSearchable": false, "bSortable": false}
                ],
                aoColumnDefs: [
                    {
                        "mRender": function(data, type, row) {

                        	var dataId = row[5];
{#                        	var dataId = actionFlag[0];#}
                                var headTitle = "Home Content Delete";
                                var msg = 'Are you sure you want to delete this home content?';
                                var returnData = "<table><tr>";
                                {% if admin_permission.checkPermission('front_home_update') %}
                                    var editUrl = '{{ path('dhi_admin_front_home_edit', {'id': 'home_id'}) }}';
                                    var editEmail = editUrl.replace("home_id", dataId);
                                    returnData +='<td><a href="'+editEmail+'" class="btn btn-success" title="Edit"> Edit</a></td>';
                                {% endif %}
                               {% if admin_permission.checkPermission('front_home_delete') %}
                                var deleteUrl = '{{ path('dhi_admin_front_home_delete', {'id': 'home_id'}) }}';
                                var finalPath = deleteUrl.replace("home_id", dataId);
                                returnData +='<td><a href="javascript:void(0)" class="btn btn-danger" title="Delete" onclick="return deleterecord(' + dataId + ',' + "'" + headTitle + "'" + ',' + "'" + msg + "'" +')">Delete</a></td>';
                               {% endif %}



                            return returnData;
                        },
                        "aTargets": [5]
                    }
                ],
                aaSorting: [[5, 'asc']]
            });
			$('#emailCampaignTable').dataTable().columnFilter({
            aoColumns: [
         
             {type: "select", sSelector: "#country", values: {{ countries|json_encode()|raw }} }
             
            ]
        });

        
        $("input").addClass("form-control");
        $("select").addClass("form-control");
        });
    </script>

{% endblock javascripts %}

