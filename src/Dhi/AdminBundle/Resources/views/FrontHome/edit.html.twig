{% extends "DhiAdminBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/dhiadmin/css/jquery-ui-1.10.3.custom.min.css') }}" rel="stylesheet">
    <style type="text/css">
        .ui-datepicker-trigger { float: right;  margin-right: -20px; margin-top: -24px; }
    </style>
{% endblock stylesheets %}

{% block body %}
<section class="content-header"><h1>Edit Home Page Content</h1></section>
<section class="content">
	<div class="box box-success">
		<form action="{{ path('dhi_admin_front_home_edit', {'id': home.id}) }}" method="POST" {{ form_enctype(form) }} id="add_home_page" class="form-horizontal" novalidate>
		<div class="box-body">
			<div class="col-xs-8">
				<div class="form-group col-sm-8">
					<label class="control-label">Country: </label>
					<div>
						{{ form_widget(form.country, { 'attr': { 'placeholder': 'Subject', 'class': 'form-control'}}) }}
						<div class="serverError">{{ form_errors(form.country) }}</div>
					</div>
				</div>

			</div>
			
			<div class="col-xs-8">
				<div class="form-group col-sm-4">
					<label class="control-label">First Column Heading: </label>
                    <div>
                        {{ form_widget(form.column1, { 'attr': { 'placeholder': 'First Column', 'class': 'form-control'}}) }}
                        <div class="serverError">{{ form_errors(form.column1) }}</div>
                    </div>
				</div>
	            <div class="form-group col-sm-6">
	                <label class="control-label">First Column Message: </label>
	                <div>
	                    {{ form_widget(form.message1, { 'attr': { 'placeholder': 'First Column Message' , 'class': 'tinymce',}}) }}
	                    <div class="serverError">{{ form_errors(form.message1) }}</div>
	                </div>
	            </div>
			</div>

			<div class="col-xs-8">
				<div class="form-group col-sm-4">
					<label class="control-label">Second Column Heading: </label>
                    <div>
                        {{ form_widget(form.column2, { 'attr': { 'placeholder': 'Second Column', 'class': 'form-control'}}) }}
                        <div class="serverError">{{ form_errors(form.column2) }}</div>
                    </div>
				</div>
	            <div class="form-group col-sm-6">
	                <label class="control-label">Second Column Message: </label>
	                <div>
	                    {{ form_widget(form.message2, { 'attr': { 'placeholder': 'Second Column Message' , 'class': 'tinymce',}}) }}
	                    <div class="serverError">{{ form_errors(form.message2) }}</div>
	                </div>
	            </div>
			</div>
			<div class="col-xs-8">
				<div class="form-group col-sm-4">
					<label class="control-label">Third Column Heading: </label>
                    <div>
                        {{ form_widget(form.column3, { 'attr': { 'placeholder': 'Third Column', 'class': 'form-control'}}) }}
                        <div class="serverError">{{ form_errors(form.column3) }}</div>
                    </div>
				</div>
	            <div class="form-group col-sm-6">
	                <label class="control-label">Third Column Message: </label>
	                <div>
	                    {{ form_widget(form.message3, { 'attr': { 'placeholder': 'Third Column Message' , 'class': 'tinymce',}}) }}
	                    <div class="serverError">{{ form_errors(form.message3) }}</div>
	                </div>
	            </div>
			</div>
			<div class="col-xs-8">
				<div class="form-group col-sm-4">
					<label class="control-label">Fourth Column Heading: </label>
                    <div>
                        {{ form_widget(form.column4, { 'attr': { 'placeholder': 'Fourth Column', 'class': 'form-control'}}) }}
                        <div class="serverError">{{ form_errors(form.column4) }}</div>
                    </div>
				</div>
	            <div class="form-group col-sm-6">
	                <label class="control-label">Fourth Column Message: </label>
	                <div>
	                    {{ form_widget(form.message4, { 'attr': { 'placeholder': 'Fourth Column Message' , 'class': 'tinymce',}}) }}
	                    <div class="serverError">{{ form_errors(form.message4) }}</div>
	                </div>
	            </div>
				{# <div class="form-group col-sm-6">
	                <label class="control-label">Fourth Column Message: </label>
	                <div>
	                    {{ form_widget(form.images, { 'attr': { 'placeholder': 'Fourth Column Message' , 'class': 'form-control',}}) }}
	                    <div class="serverError">{{ form_errors(form.images) }}</div>
	                </div>
	            </div>#}
			</div>

		</div>

		{{ form_rest(form) }}
			<div class="box-footer">
			<div class="col-sm-12">
			    <div class="col-sm-6">
			        <input type="submit" class="btn btn-success" name="Update" value="Update"/>
			        <a href="{{ path('dhi_admin_front_home_list') }}" class="btn btn-default">Back</a>
			    </div>
			</div>
		</div>
		</form>
	</div>
</section>

{{ tinymce_init() }}

{% endblock body %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/dhiadmin/js/jquery-ui-1.10.3.custom.min.js') }}"></script>

    <script type="text/javascript">
        $(document).ready(function () {
        		$("#add_home_page").submit(function() {
    			// update underlying textarea before submit validation
    			tinyMCE.triggerSave();
    		}).validate({
                ignore: [],

                rules: {
                	"dhi_admin_front_home[column1]": "required",
                	"dhi_admin_front_home[message1]": "required",
                	{#"dhi_admin_front_home[column12]": "required",
                	"dhi_admin_front_home[message2]": "required",
					"dhi_admin_front_home[column3]": "required",
                	"dhi_admin_front_home[message3]": "required",
					"dhi_admin_front_home[column4]": "required",
                	"dhi_admin_front_home[message4]": "required",#}
                },
                messages: {
                	"dhi_admin_front_home[column1]": "Please enter heading for the first column",
                	"dhi_admin_front_home[message1]": "Please enter message for the first column",
                	{#"dhi_admin_front_home[column12]": "please enter heading",
                	"dhi_admin_front_home[message2]": "please enter message",
					"dhi_admin_front_home[column3]": "please enter heading",
                	"dhi_admin_front_home[message3]": "please enter message",
					"dhi_admin_front_home[column4]": "please enter heading",
                	"dhi_admin_front_home[message4]": "please enter message",#}
                }
            });
		});
       </script>
{% endblock javascripts %}