{% block body %}
    <div class="modal-header">
    	<h4 class="modal-title" id="channelModal-title">{{ label }} TikiLive Plan</h4>
    </div>
        {% if result == 'success' %}
                <form action="{{ path('dhi_admin_package_wise_tikilive_plan_edit', { 'packageId': packageId }) }}" method="POST" {{ form_enctype(form) }} class="form-horizontal" id="edit_tikilive_plan_form" novalidate>
                        <div class="modal-body">
                                <div class="box-body form-group-section">
                                   <div class="form-group">
                                       <div class="col-sm-4">
                                           <label class="control-label">Select TikiLive Plan: </label>
                                       </div>
                                       <div class="col-sm-7">
                                           {{ form_widget(form.tikiLivePlanName, { 'attr': { 'placeholder': 'Enter TikiLive Plan', 'class': 'form-control'}}) }}
                                           <div class="serverError">{{ form_errors(form.tikiLivePlanName) }}</div> 
                                           <label id="dhi_admin_compensation_ispHours-error" class="error" for="dhi_admin_compensation_ispHours"></label>
                                       </div>
                                   </div>
                               </div>
                        </div>
                        <div class="modal-footer">
                                <input type="submit" name="edit" value="{{label}}" class="btn btn-success"/>
                                <button type="button" class="btn btn-default" data- id="closeBtn" data-dismiss="modal">Close</button>
                        </div>
                    {{ form_rest(form) }}
                </form>
        {% else %}
                <div class="msgBoxCont">
                    <div class="alert alert-{{class}}">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        {{ msg|raw }}
                    </div>
                </div>
                 <div class="modal-footer">
                        <button type="button" class="btn btn-default pull-right" data- id="closeBtn" data-dismiss="modal">Close</button>
                </div>
        {% endif %}
{% endblock body %}
{% block javascripts %}
	<script type="text/javascript">
        $(document).ready(function(){

            $('#edit_tikilive_plan_form').validate({
                rules: {
                    "dhi_admin_package_wise_tikilive_plan[tikiLivePlanName]": {
                        "required": true
                    }
                },
                messages: {
                    "dhi_admin_package_wise_tikilive_plan[tikiLivePlanName]": {
                        "required": "Please select TikiLive plan."
                    }
                }
            });
        });
	</script>
{% endblock javascripts %}