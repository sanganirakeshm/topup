{% extends "DhiAdminBundle::layout.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/dhiadmin/css/jquery-ui-1.10.3.custom.min.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('bundles/dhiadmin/FCBKcomplete/style.css') }}" type="text/css" media="screen" charset="utf-8" />
    <style type="text/css">
        .ui-datepicker-trigger { float: right;  margin-right: -20px; margin-top: -24px; }
    </style>
{% endblock stylesheets %}
{% block body %}
    <section class="content-header"><h1>Add Business Promo Code Batch</h1></section>
    <section class="content">
        <div class="box box-success">
            <form action="{{ path('dhi_admin_business_batch_new') }}" method="POST" {{ form_enctype(form_batch) }}{{ form_enctype(form_code) }} id="add_parter_promo_code" class="form-horizontal" novalidate>
                <div class="box-body">
                    <div class="col-xs-12">
                        <div class="form-group col-xs-4">
                            <label class="control-label">Select Business: </label>
                            {{ form_widget(form_batch.business, { 'attr': { 'placeholder': 'Service Location', 'class': 'form-control'}}) }}
                            <div class="serverError">{{ form_errors(form_batch.business) }}</div>
                            <label id="dhi_admin_promo_code_business-error" class="error" for="dhi_admin_promo_code_business"></label>
                        </div>
                        <div class="form-group col-xs-4">
                            <label class="control-label">Service Location: </label>
                            {{ form_widget(form_code.serviceLocations, { 'attr': { 'placeholder': 'Service Location', 'class': 'form-control'}}) }}
                            <div class="serverError">{{ form_errors(form_code.serviceLocations) }}</div>
                            <label id="dhi_admin_promo_code_serviceLocations-error" class="error" for="dhi_admin_promo_code_serviceLocations"></label>
                        </div>  
                        <div class="form-group col-xs-4">
                            <label class="control-label">Service: </label>
                            {{ form_widget(form_code.service, { 'attr': { 'placeholder': 'Service', 'class': 'form-control'}}) }}
                            <div class="serverError">{{ form_errors(form_code.service) }}</div>
                            <label id="dhi_admin_promo_code_service-error" class="error" for="dhi_admin_promo_code_service"></label>
                        </div>
                    </div>
                    <div class="col-xs-12">
                        <div class="form-group col-xs-4">
                            <label class="control-label">Batch Prefix:</label>
                            <div class="row">
                                <div class="col-lg-3">
                                    <input type="hidden" name="hdnServicePrefix" id="hdnServicePrefix">
                                    <input type="text" class="form-control" name="txtRandomChar" id="txtRandomChar" readonly="true" value={{ randBatchNameCode }}>
                                </div>
                                <div class="col-lg-9">
                                    {{ form_widget(form_batch.batchName, { 'attr': { 'placeholder': 'Enter batch prefix', 'class': 'form-control', 'maxlength': '4'}}) }}
                                    <div class="serverError">{{ form_errors(form_batch.batchName) }}</div>
                                    <label id="dhi_admin_promo_code_serviceLocations-error" class="error" for="dhi_admin_promo_code_serviceLocations"></label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-sm-4">
                            <label class="control-label">Select Package: </label>
                            <div>
                                {{ form_widget(form_code.packageId, { 'attr': { 'placeholder': 'Select Package', 'class': 'form-control'}}) }}
                                <div class="serverError">{{ form_errors(form_code.packageId) }}</div>
                                <label id="dhi_admin_promo_code_service-error" class="error" for="dhi_admin_promo_code_service"></label>
                            </div>
                        </div>
                        <div class="form-group col-xs-4">
                            <label class="control-label">Duration (Hours): </label>
                            {{ form_widget(form_code.duration, { 'attr': { 'placeholder': 'Enter duration', 'class': 'form-control'}}) }}
                            <div class="serverError">{{ form_errors(form_code.duration) }}</div>
                            <label id="dhi_admin_promo_code_serviceLocations-error" class="error" for="dhi_admin_promo_code_serviceLocations"></label>
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <div class="form-group col-xs-4">
                            <label class="control-label">No of Codes: </label>
                            {{ form_widget(form_batch.noOfCodes, { 'attr': { 'placeholder': 'Enter no of codes', 'class': 'form-control'}}) }}
                            <div class="serverError">{{ form_errors(form_batch.noOfCodes) }}</div>
                            <label id="dhi_admin_promo_code_serviceLocations-error" class="error" for="dhi_admin_promo_code_serviceLocations"></label>
                        </div>
                        <div class="form-group col-xs-4">
                            <label class="control-label">Business Value: </label>
                            {{ form_widget(form_code.businessValue, { 'attr': { 'placeholder': 'Enter business value', 'class': 'form-control'}}) }}
                            <div class="serverError">{{ form_errors(form_code.businessValue) }}</div>
                            <label id="dhi_admin_promo_code_serviceLocations-error" class="error" for="dhi_admin_promo_code_serviceLocations"></label>
                        </div>
                        <div class="form-group col-xs-4">
                            <label class="control-label">Customer Value: </label>
                            {{ form_widget(form_code.customerValue, { 'attr': { 'placeholder': 'Enter customer value', 'class': 'form-control'}}) }}
                            <div class="serverError">{{ form_errors(form_code.customerValue) }}</div>
                            <label id="dhi_admin_promo_code_serviceLocations-error" class="error" for="dhi_admin_promo_code_serviceLocations"></label>
                        </div>   
                    </div>          

                    <div class="col-xs-12">
                        <div class="form-group col-sm-4">
                            <label class="control-label">Expiry Date: </label>
                            <div class="row">
                                <div class="col-lg-7">
                                    {{ form_widget(form_code.expirydate, { 'attr': { 'placeholder': 'Select expiry date', 'class': 'form-control'}}) }}
                                    <div class="serverError">{{ form_errors(form_code.expirydate) }}</div>
                                    <label id="dhi_admin_promo_code_service-error" class="error" for="dhi_admin_promo_code_service"></label>
                                </div>
                                <div class="col-lg-5">
                                    <input type="checkbox" name="chkNeverExpire" id="chkNeverExpire">Never Expire  
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-xs-4">
                            <label class="control-label">Status: </label>
                            {{ form_widget(form_code.status, { 'attr': { 'placeholder': '', 'class': 'form-control'}}) }}
                            <div class="serverError">{{ form_errors(form_code.status) }}</div>
                            <label id="dhi_admin_promo_code_serviceLocations-error" class="error" for="dhi_admin_promo_code_serviceLocations"></label>
                        </div>
                        <div class="form-group col-xs-4">
                            <label class="control-label">Reason: </label>
                            {{ form_widget(form_batch.reason, { 'attr': { 'placeholder': 'Enter reason', 'class': 'form-control'}}) }}
                            <div class="serverError">{{ form_errors(form_batch.reason) }}</div>
                            <label id="dhi_admin_promo_code_serviceLocations-error" class="error" for="dhi_admin_promo_code_reason"></label>
                        </div>
                    </div>
                    <div class="col-xs-12">
                        <div class="form-group col-xs-4">
                            <label class="control-label">Note: </label>
                            {{ form_widget(form_batch.note, { 'attr': { 'placeholder': 'Enter note', 'class': 'form-control'}}) }}
                            <div class="serverError">{{ form_errors(form_batch.note) }}</div>
                            <label id="dhi_admin_promo_code_serviceLocations-error" class="error" for="dhi_admin_promo_code_note"></label>
                        </div>
                    </div>
                </div>

                <div class="box-footer">
                    {{ form_rest(form_batch) }}
                    {{ form_rest(form_code) }}
                    <div class="col-sm-12">
                        <div class="col-sm-6">
                            <input type="submit" class="btn btn-success" name="add" value="Add"/>
                            <a href="{{ path('dhi_admin_business_batch_list') }}" class="btn btn-default">Back</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>

    {{ tinymce_init() }}

    <div class="modal fade" id="emailPreviewModal" tabindex="-1" role="dialog" aria-labelledby="emailPreviewModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

            </div>
        </div>
    </div>

    <div id="ajax-loader-bx" style="display:none;">
        <img id="loading" src="{{ asset('bundles/dhiuser/images/ajax_loader1.gif') }}"><br/>
        <div id="loader-text">Please wait....</div>
    </div>

{% endblock body %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/dhiadmin/js/jquery-ui-1.10.3.custom.min.js') }}"></script>
    <script src="{{ asset('bundles/dhiadmin/FCBKcomplete/jquery.fcbkcomplete.js') }}" type="text/javascript" charset="utf-8"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $.validator.addMethod("valueRegex", function(value, element) {
                var isValidMoney = /^\d{0,4}(\.\d{0,2})?$/.test(value);
                return this.optional(element) || isValidMoney;
            }, "Please enter valid value");
            
            $("#add_parter_promo_code").validate({
                rules: {
                    "dhi_admin_business_promo_code[serviceLocations]": {
                        "required": true
                    },
                    "dhi_admin_business_promo_code_batch[business]": {
                        "required": true
                    },
                    "dhi_admin_business_promo_code[service]": {
                        "required": true
                    },
                    "dhi_admin_business_promo_code_batch[noOfCodes]": {
                        "required": true,
                        "number": true
                    },
                    "dhi_admin_business_promo_code_batch[reason]": {
                        "required": true,
                        "maxlength": 255
                    },
                     "dhi_admin_business_promo_code_batch[note]": {
                        "required": true,
                        "maxlength": 255
                    },
                    "dhi_admin_business_promo_code[packageId]": {
                        "required": true
                    },
                    "dhi_admin_business_promo_code[duration]": {
                        "required": true,
                        'number': true,
                        "min": 1
                    },
                    "dhi_admin_business_promo_code[expirydate]": {
                        "required": true
                    },
                    "dhi_admin_business_promo_code_batch[batchName]": {
                        "required": true,
                        "rangelength": [4, 4]
                    },
                    "dhi_admin_business_promo_code[businessValue]": {
                        "required": true,
                        "number": true,
                        "min": 0,
                        "valueRegex": true
                    },
                    "dhi_admin_business_promo_code[customerValue]": {
                        "required": true,
                        "number": true,
                        "min": 0,
                        "valueRegex": true
                    },
                    "dhi_admin_business_promo_code[status]": {
                        "required": true
                    }
                },
                messages: {
                    "dhi_admin_business_promo_code[serviceLocations]": {
                        "required": "Please select a service location."
                    },
                    "dhi_admin_business_promo_code_batch[business]": {
                        "required": "Please select a business."
                    },
                    "dhi_admin_business_promo_code[service]": {
                        "required": "Please select a service."
                    },
                    "dhi_admin_business_promo_code[packageId]": {
                        "required": "Please select a package."
                    },
                    "dhi_admin_business_promo_code[duration]": {
                        "required": "Please enter duration.",
                        "number": "Please enter valid duration.",
                        "min": "Please enter duration."
                    },
                    "dhi_admin_business_promo_code[expirydate]": {
                        "required": "Please select expiry date."
                    },
                    "dhi_admin_business_promo_code_batch[noOfCodes]": {
                        "required": "Please enter number of codes you want to generate.",
                        "number": "Please enter valid number of code."
                    },
                    "dhi_admin_business_promo_code_batch[reason]": {
                        "required": "Please enter reason.",
                        "maxlength": "Reason can have maximum 255 characters."
                    },
                    "dhi_admin_business_promo_code_batch[note]": {
                        "required": "Please enter note.",
                        "maxlength": "Note can have maximum 255 characters."
                    },
                    "dhi_admin_business_promo_code_batch[batchName]": {
                        "required": "Please enter batch prefix.",
                        "rangelength": "Please enter must be 4 character value"
                    },
                    "dhi_admin_business_promo_code[businessValue]": {
                        "required": "Please enter business value.",
                        "min": "Please enter a value greater than or equal to 0.",
                        "number": "Please enter valid business value.",
                        "valueRegex": "Please enter valid business value (Ex: xxxx.xx)."
                    },
                    "dhi_admin_business_promo_code[customerValue]": {
                        "required": "Please enter customer value.",
                        "min": "Please enter a value greater than or equal to 0.",
                        "number": "Please enter valid customer value.",
                        "valueRegex": "Please enter valid customer value (Ex: xxxx.xx)."
                    },
                    "dhi_admin_business_promo_code[status]": {
                        "required": "Please select a status."
                    }
                }
            });
            
            $("#chkNeverExpire").click(function (){
                var isDisabled = $("#dhi_admin_business_promo_code_expirydate").prop('disabled');
                if(isDisabled){
                    $("#dhi_admin_business_promo_code_expirydate").prop("disabled", false);
                }
                else{
                    $("#dhi_admin_business_promo_code_expirydate").prop("disabled", true);
                }
                    
            });
            
            $('#dhi_admin_business_promo_code_serviceLocations, #dhi_admin_business_promo_code_batch_business').change(function () {
                var locationId = $('#dhi_admin_business_promo_code_serviceLocations').val();
                var businessId = $('#dhi_admin_business_promo_code_batch_business').val();

                var serviceLocation = $('#dhi_admin_business_promo_code_serviceLocations option:selected').text();
                $('#hdnServicePrefix').val(serviceLocation);
                $.ajax({
                    type: "POST",
                    url: "{{ path('dhi_admin_get_business_promo_code_service') }}",
                    data: {locationId: locationId, businessId: businessId},
                    beforeSend: function (xhr) {

                        $('#ajax-loader-bx').show();
                    },
                    success: function (result) {
                        $('#dhi_admin_business_promo_code_service').empty();
                        var s = document.getElementById('dhi_admin_business_promo_code_service');
                        var cnt = 0;
                        s.options[cnt] = new Option('Select Service', '');
                        cnt++;
                        $.each(result, function (key, value) {
                            s.options[cnt] = new Option(value, parseInt(key));
                            cnt++;
                        });
                        
                        $('#ajax-loader-bx').hide();
                    }
                });
            }).change();

            $('#dhi_admin_business_promo_code_serviceLocations, #dhi_admin_business_promo_code_service').change(function () {
                var locationId = $('#dhi_admin_business_promo_code_serviceLocations').val();
                var serviceId = $('#dhi_admin_business_promo_code_service').val();

                var serviceLocation = $('#dhi_admin_business_promo_code_serviceLocations option:selected').text();
                $('#hdnServicePrefix').val(serviceLocation);
                $.ajax({
                    type: "POST",
                    url: "{{ path('dhi_admin_get_business_promo_code_package') }}",
                    data: {locationId: locationId, serviceId: serviceId},
                    beforeSend: function (xhr) {
                        $('#ajax-loader-bx').show();
                    },
                    success: function (result) {
                        $('#dhi_admin_business_promo_code_packageId').empty();
                        var s = document.getElementById('dhi_admin_business_promo_code_packageId');
                        var cnt = 0;
                        s.options[cnt] = new Option('Select', '');
                        cnt++;
                        $.each(result, function (key, value) {
                            s.options[cnt] = new Option(value, parseInt(key));
                            cnt++;
                        });
                        
                        $('#ajax-loader-bx').hide();
                    }
                });
            }).change();

            $('#dhi_admin_business_promo_code_expirydate').datepicker({
                timepicker: false,
                format: 'mm-dd-yy',
                dateFormat: 'mm-dd-yy',
                readOnly: true,
                minDate: 0,
                onSelect: function (selected) {
                    var dt = new Date(selected);
                    dt.setDate(dt.getDate() - 1);
                }
            }).keyup(function (e) {
                if (e.keyCode == 8 || e.keyCode == 46) {
                    $.datepicker._clearDate(this);
                }
            });
        });
    </script>
{% endblock javascripts %}