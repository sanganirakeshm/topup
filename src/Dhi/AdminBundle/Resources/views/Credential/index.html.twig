{% extends "DhiAdminBundle::layout.html.twig" %}
{% block body %}	
        {% include "DhiUserBundle::flashMessage.html.twig" %}
         <div class="delBoxCont"></div>
         <section class="content-header">
              <h1>PayPal Credentials</h1>
            </section>
            <section class="content">	
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box box-success">
                            <form method="get" id="searchService">
                                <div class="box-body">
                                    <div class="form-group col-md-4">                                                       
                                        <div class="row"><div class="col-sm-12" id="title"></div></div>
                                    </div>                                   
                                </div>
                            </form>
                        </div>
                    </div>
                </div>		
                <div class="box box-success">
                    <div class="box-body">
		                <div class="row">
                 		    <div class="col-xs-12">  
                                {% if admin_permission.checkPermission('credential_create') %}
                                   <div class="addNewBtnsGrp">
                                    <a href="{{ path('dhi_admin_credential_new') }}" class="btn btn-success pull-right margin-top5">Add Paypal Account</a>
                                   </div>
                                {% endif %}
    			                <table id="CredentialTable" cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Country</th>
                                            <th>Service Location</th>
                                            <th>Description</th>
                                            <th>Credential Id</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                 </div>        
            </section>	                    
{% endblock body %}
{% block javascripts %}
    
    {{ parent() }}

   <script type="text/javascript">
        
        $(document).ready(function () {
          
            deleteAjaxSource = '{{ path('dhi_admin_credential_delete') }}';
           
            dTable = $('#CredentialTable').dataTable({
               
                "oLanguage": {
                    "sLengthMenu": "Display _MENU_ Records",
                    "sZeroRecords": "<center>No Record Found!</center>",
                    "sInfo": "Showing _START_ to _END_ of _TOTAL_ Records",
                    "sInfoEmpty": "Showing 0 to 0 of 0 records",
                    "sInfoFiltered": "(filtered from _MAX_ total records)"
                },
                responsive: true,
                bJQueryUI: false,
                bProcessing: true,
                bServerSide: true,
                bFilter: true,
                //multipleSelection: true,
                iDisplayLength: {{ record_per_page }},
                sAjaxSource: "{{ path('dhi_admin_credential_list_json') }}",
                "fnServerData": function ( sUrl, aoData, fnCallback, oSettings ) {
                    oSettings.jqXHR = $.ajax( {
                        "url":  sUrl,
                        "data": aoData,
                        "success": function (json) {
                            if ( json.sError ) {
                                    oSettings.oApi._fnLog( oSettings, 0, json.sError );
                            }
                            $(oSettings.oInstance).trigger('xhr', [oSettings, json]);
                            fnCallback( json );
                        },
                        "dataType": "json",
                        "cache": false,
                        "type": oSettings.sServerMethod,
                        "error": function (xhr, error, thrown) {
                            if ( error == "parsererror" ) {
                                        window.location = "{{ path('dhi_admin_user_list') }}";
                                }
                        }
                    } );
        		},
                aoColumns: [
                    {"sName": "Id", "bSearchable": false, "bSortable": true, "bVisible": false},
                    {"sName": "Country", "bSearchable": false, "bSortable": true},
                    {"sName": "Service Locations", "bSearchable": false, "bSortable": false},
                    {"sName": "Credential Name","bSearchable": false,"bSortable": false,},
                    {"sName": "Credential Id","bSearchable": true,"bSortable": true,},
                    {"sName": "Action", "bSearchable": false, "bSortable": false}
                ],
                aoColumnDefs: [
                    {
                        "mRender": function(data, type, row) {
                        	var actionFlag = row[5].split('^');
                        	var dataId = actionFlag[0];        
                            var headTitle = "Credential Delete";
                            var msg = 'Are you sure you want to delete this credential?';
                            var returnData = "<table><tr>";
                               
                            {% if admin_permission.checkPermission('credential_update') %}
                                var editUrl = '{{ path('dhi_admin_credential_edit', {'id': 'credential_id'}) }}';
                                var editCompensation = editUrl.replace("credential_id", dataId);
                                returnData +='<td><a href="'+editCompensation+'" class="btn btn-success" title="Edit"> Edit</a></td>';
                            {% endif %}

                           {% if admin_permission.checkPermission('credential_delete') %}
                            var deleteUrl = '{{ path('dhi_admin_credential_delete', {'id': 'credential_id'}) }}';
                            var finalPath = deleteUrl.replace("credential_id", dataId);
                            returnData +='<td><a href="javascript:void(0)" class="btn btn-danger" title="Delete" onclick="return deleterecord(' + dataId + ',' + "'" + headTitle + "'" + ',' + "'" + msg + "'" +')">Delete</a></td>';  
                           {% endif %}
                            return returnData;
                        },
                        "aTargets": [5]
                    }
                ],
                aaSorting: [[0, 'desc']]
            });
             $('#CredentialTable').dataTable().columnFilter({
                aoColumns: [
                 null,
                 null,
                 null,
                 {type: "text", sSelector: "#title"},
                ]
        });

        $("input").addClass("form-control");
        $("select").addClass("form-control");
        });
    </script>
    
{% endblock javascripts %}