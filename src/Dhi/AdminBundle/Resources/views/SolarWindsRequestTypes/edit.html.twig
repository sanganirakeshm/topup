{% extends "DhiAdminBundle::layout.html.twig" %}
{% block body %}
     <section class="content-header">
        <h1>Edit Solar Winds Request Type </h1>
    </section>
    {% include "DhiUserBundle::flashMessage.html.twig" %}
     <section class="content">
        <div class="box box-success">
            <div class="row">
                <div class="col-sm-12">
                    <form action="{{ path('dhi_admin_solar_winds_location_edit',{'id': objsolarwindslocation.id})}}" method="POST" {{ form_enctype(form) }} id="locationWiseSolarWindsForm" class="form-horizontal" novalidate>		            
                        <div class="box-body form-group-section">

                             <div class="form-group col-md-4">
                                <label class="control-label">Site: </label>
                                <input type="text" class="form-control" value="{{objsolarwindslocation.supportsite.companyName}} ({{objsolarwindslocation.supportsite.domain}})" readonly>
                            </div>
                            
                             <div class="form-group col-md-4">
                                <label class="control-label">Support Location: </label>
                                <input type="text" class="form-control" value="{{objsolarwindslocation.supportLocation.name}}" readonly>
                            </div>

                            <div class="form-group col-md-4">
                                <label class="control-label">Solar Winds Request Type: </label>
                                {{ form_widget(form.solarWindsRequestType, { 'attr': { 'placeholder': 'Solar Winds Request Type', 'class': 'form-control'}}) }}
                                <div class="serverError">{{ form_errors(form.solarWindsRequestType) }}</div>	
                            </div>
                        </div>
                        <div class="box-footer">		
                            <div class="col-sm-12">
                                <input type="submit" name="edit" value="Update" class="btn btn-success"/>
                                <a href="{{ path('dhi_admin_solar_winds_location_list') }}" class="btn btn-default">Back</a>
                            </div>
                        </div>
                        {{ form_rest(form) }}
                    </form>

                </div>
            </div>
    </section>	
{% endblock body %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
             $('#locationWiseSolarWindsForm').validate({
                rules: {
                    "dhi_admin_solar_winds_location[supportLocation]": {
                        "required": true
                    },
                    "dhi_admin_solar_winds_location[solarWindsRequestType]": {
                        "required": true
                    }
                },
                messages: {
                    "dhi_admin_solar_winds_location[supportLocation]": {
                        "required": "Please select support location"
                    },
                    "dhi_admin_solar_winds_location[solarWindsRequestType]": {
                        "required": "Please select solar winds Request Type"
                    }
                }
            });
        });
    </script>
{% endblock javascripts %}