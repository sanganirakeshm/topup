{% block body %}
<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="channelModal-title">Preview</h4>
</div>
<div class="modal-body">
	<div style="overflow-x:hidden;overflow-y:auto;max-height:450px;">
		<div class="row">

			<div class="col-sm-12">
				{% if data %}
					<div class="table-responsive">
						<table class="table table-bordered mb30" style="width:550px;">
                        	<tbody>
								<tr>
                                    <th nowrap="nowrap">Service Location</th>
                                    <td>{% if data.serviceLocations %} {{ data.serviceLocations.name }} {% endif %}
									</td>
								</tr>
								<tr>
									<th nowrap="nowrap">Service</th>
                                    <td>{% if data.service %} {{ data.service.name }} {% endif %}
									</td>
								</tr>
								<tr>
                                    <th nowrap="nowrap">Package Type</th>
                                    <td>{{ package }}</td>
								</tr>
								<tr>
									<th nowrap="nowrap">Note</th>
                                    <td>{{ data.note }}</td>
								</tr>
								<tr>
                                    <th nowrap="nowrap">Expiration Date</th>
                                    <td>{{ data.expiredAt|date('M-d-Y') }}{#{{ data.endDate }}#}</td>
								</tr>
                                {% if noOfCodes != ''%}
                                    <tr>
                                        <th nowrap="nowrap">No. of Codes</th>
                                        <td>{{ noOfCodes }}</td>
                                    </tr>
                                {% endif %}
								<tr>
                                    <th nowrap="nowrap">Duration</th>
                                    <td>{{ data.duration }} Hour{#{{ data.endDate }}#}</td>
								</tr>
								<tr>
                                    <th nowrap="nowrap">Status</th>
                                    <td>{% if data.status %} Active {% else %} InActive {% endif %} </td>
								</tr>
							</tbody>
						</table>
					</div>
					
					
				{% else %}
				<p>Compensation data not available for preview.</p>
				{% endif %}
			</div>
		</div>     
	</div>       	
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-default pull-right" data-dismiss="modal">Close</button>                
</div>
	    
{% endblock body %}