{% extends "DhiAdminBundle::layout.html.twig" %}
{% block body %}
    {% include "DhiUserBundle::flashMessage.html.twig" %}
        <section class="content-header">
            <h1>Search Channel</h1>
        </section>
        <section class="content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="box box-success">
                        <form method="get">
                            <div class="box-body">
                                <div class="form-group col-md-3">
                                    <div class="row"><div class="col-sm-12" id="name"></div></div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="box box-success">
                <div class="box-body">
        			<div class="row">
     	          	    <div class="col-xs-12">  
                        <table id="channelTable" cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Channel Name</th>
                                    <th>Channel Image</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>
                        </div>
                    </div>
                </div>
             </div>        
        </section>    
{% endblock body %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        
        $(document).ready(function () {
            dTable = $('#channelTable').dataTable({
                "oLanguage": {
                    "sLengthMenu": "Display _MENU_ Records",
                    "sZeroRecords": "<center>No Record Found!</center>",
                    "sInfo": "Showing _START_ to _END_ of _TOTAL_ Records",
                    "sInfoEmpty": "Showing 0 to 0 of 0 records",
                    "sInfoFiltered": "(filtered from _MAX_ total records)"
                },
                responsive: true,
                bJQueryUI: false,
                bProcessing: true,
                bServerSide: true,
                bFilter: true,
                iDisplayLength: {{ record_per_page }},
                sAjaxSource: "{{ path('dhi_admin_channel_list_json') }}",
                "fnServerData": function ( sUrl, aoData, fnCallback, oSettings ) {
                    oSettings.jqXHR = $.ajax( {
                        "url":  sUrl,
                        "data": aoData,
                        "success": function (json) {
                            if ( json.sError ) {
                                    oSettings.oApi._fnLog( oSettings, 0, json.sError );
                            }
                            $(oSettings.oInstance).trigger('xhr', [oSettings, json]);
                            fnCallback( json );
                        },
                        "dataType": "json",
                        "cache": false,
                        "type": oSettings.sServerMethod,
                        "error": function (xhr, error, thrown) {
                            if ( error == "parsererror" ) {
                                window.location = "{{ path('dhi_admin_user_list') }}";
                            }
                        }
                    });
		        },
                aoColumns: [
                    {"sName": "name","bSearchable": true,"bSortable": true},
                    {"sName": "image", "bSearchable": false, "bSortable": false},
                    {"sName": "Action", "bSearchable": false, "bSortable": false}
                ],
                aoColumnDefs: [
                    {
                        "mRender": function(data, type, row) {
                            var returnData = "N/A";
                            {% if admin_permission.checkPermission('channel_master_update') %}
                                    var channelId = row[2];
                                    returnData = "<a href='javascript:void(0);' class='selectLink'>Select <span class='fa fa-angle-down'></span></a>";
                                    returnData += "<ul class='selectDropdown' style='display: none;'>";
                                        
                                    var editUrl = '{{ path('dhi_admin_channel_list_edit', {'id': 'channelId'}) }}';
                                    var editChannel = editUrl.replace("channelId", channelId);
                                    returnData +='<li><a href="' + editChannel + '"  title="Edit"> Edit</a></li>';
                                {% endif %}                                

                            return returnData;
                        },
                        "aTargets": [2]
                    },
                    {
                        "mRender": function(data, type, row) {
                            var imageName = row[1];
                            var returnData = "N/A";
                            if(imageName != "N/A"){
                                var img = $('<img class="image">');
                                img.attr('src', imageName);
                                img.attr('style', "max-width:400px;");
                                img.appendTo('#imagediv');
                                returnData = img.prop('outerHTML');
                            }
                            return returnData;
                        },
                        "aTargets": [1]
                    }
                ],
                aaSorting: [[2, 'asc']]
            });
            $('#channelTable').dataTable().columnFilter({
                aoColumns: [
                    {type: "text", sSelector: "#name"}
                ]
            });
        $("input").addClass("form-control");
        $("select").addClass("form-control");
    });
    </script>
{% endblock javascripts %}