{% extends "DhiAdminBundle::layout.html.twig" %}

{% block body %}

           
			<!-- Content Header (Page header) -->
			<section class="content-header">
				 <h1>Add New Group</h1>
			</section>
			<section class="content">
			<div class="box box-success">
            <form action="{{ path('dhi_admin_group_new') }}" method="POST" {{ form_enctype(form) }} class="form-horizontal" id="group_form">
                <div class="box-body">
				<div class="form-group col-sm-4">
                    <label class="control-label">Name: </label>
                    <div>
                        {{ form_widget(form.name, { 'attr': { 'placeholder': 'Name','class': 'form-control'}}) }}
                        <div class="serverError">{{ form_errors(form.name) }}</div>
                    </div>
                </div>
				</div>
				<div class="box-footer">
                {{ form_rest(form) }}
                <div class="form-group col-sm-4">
                    <div class=" col-sm-6 add-btn-bx">
                        <input type="submit" name="add" value="Add" class="btn btn-success"/>
                        <a href="{{ path('dhi_admin_group_list') }}" class="btn btn-info">Back</a>
                    </div>
                </div>
				</div>
            </form>
			</div>
		</section>	
   
{% endblock body %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function() {
            $('#group_form').validate({
                rules: {
                    "dhi_admin_group[name]": {
                        "required": true
                    }
                },
                messages: {
                    "dhi_admin_group[name]": {
                        "required": "Please enter group name."
                    }
                }
            });
        });
    </script>
    
{% endblock javascripts %}