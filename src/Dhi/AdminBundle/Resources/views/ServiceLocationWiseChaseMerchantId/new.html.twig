{% extends "DhiAdminBundle::layout.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/dhiadmin/FCBKcomplete/style.css') }}" type="text/css" media="screen" charset="utf-8" />		
{% endblock %}
{% block body %}

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Add New Service Location Wise Chase Merchant Id</h1>
    </section>
    {% include "DhiUserBundle::flashMessage.html.twig" %}
    <section class="content">
        <div class="box box-success">
            <div class="row">
                <div class="col-sm-12">
                    <form action="{{ path('dhi_admin_service_location_wise_chase_merchant_id_new') }}" method="POST" {{ form_enctype(form) }} id="merchantId_form" class="form-horizontal" novalidate>		            
                        <div class="box-body form-group-section">

                            <div class="form-group col-md-4">
                                <label class="control-label">Service Location: </label>
                                {{ form_widget(form.serviceLocation, { 'attr': { 'placeholder': 'Service Location', 'class': 'form-control'}}) }}
                                <div class="serverError">{{ form_errors(form.serviceLocation) }}</div>	
                            </div>
                            
                            <div class="form-group col-md-4">
                                <label class="control-label">Chase Merchant Name: </label>
                                {{ form_widget(form.chaseMerchantIds, { 'attr': { 'placeholder': 'Chase Merchant Id', 'class': 'form-control'}}) }}
                                <div class="serverError">{{ form_errors(form.chaseMerchantIds) }}</div>	
                            </div>
                        </div>
                            <div class="box-footer">		
                                <div class="col-sm-12">
                                    <input type="submit" name="add" value="Add" class="btn btn-success"/>
                                    <a href="{{ path('dhi_admin_service_location_wise_chase_merchant_id_list') }}" class="btn btn-default">Back</a>
                                </div>
                            </div>
                            {{ form_rest(form) }}
                    </form>
                
            </div>
        </div>
    </section>	
    {{ tinymce_init() }}

    <div id="ajax-loader-bx" style="display:none;">
        <img id="loading" src="{{ asset('bundles/dhiuser/images/ajax_loader1.gif') }}"><br/>
        <div id="loader-text">Please wait....</div>
    </div>
{% endblock body %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/dhiadmin/FCBKcomplete/jquery.fcbkcomplete.js') }}" type="text/javascript" charset="utf-8"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            $('#merchantId_form').validate({
                rules: {
                    "dhi_admin_service_location_wise_chase_merchantId[serviceLocation]": {
                        "required": true
                    },
                    "dhi_admin_service_location_wise_chase_merchantId[chaseMerchantIds]": {
                        "required": true
                    }
                },
                messages: {
                    "dhi_admin_service_location_wise_chase_merchantId[serviceLocation]": {
                        "required": "Please select service location"
                    },
                    "dhi_admin_service_location_wise_chase_merchantId[chaseMerchantIds]": {
                        "required": "Please select merchant id"
                    }
                }
            });
        });
    </script>
{% endblock javascripts %}