{% block body %}
<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="channelModal-title">Channel List {% if channelList %} {% endif %}</h4>
</div>
<div class="modal-body">
	<div style="overflow-x:hidden;overflow-y:auto;max-height:450px;">
		<div class="row">
			
			{% if channelList|length > 0 %}
                    
				
					{% set i = 1 %}
					{% set j = 1 %}
					{% set cnt = 1 %}
					{% for key,value in channelList.channel %}
						
						{% set bxcls = 'ch-odd' %}
						{% if j is divisibleby(2) %}{% set bxcls = 'ch-even' %}{% endif %}
						{% if i == 1 %}<div class="col-xs-12 ch-box-rw">{% endif %}
							<div class="col-xs-3 col-ch-box {{ bxcls }}">
								<span>{{ value }}</span>
							</div>									
						{% if i == 3 or cnt == channelList.channel|length %}</div> {% set i = 0 %} {% set j = j + 1 %}{% endif %}
					{% set i = i + 1 %}
					{% set cnt = cnt + 1 %}
					{% endfor %}
				
			{% else %}
			<div class="col-xs-12">Channel list not available.</div>             
			{% endif %}  
		</div>     
	</div>       	
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>                
</div>
	    
{% endblock body %}